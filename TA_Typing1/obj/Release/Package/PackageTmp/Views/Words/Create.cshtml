@model TA_Typing1.Models.Word

@{
    ViewBag.Title = "Create";
    Layout = "";
}

@using (Html.BeginForm("create", "words", FormMethod.Post, new { @id = "create-word-form" }))
{
    <div class="modal-dialog container">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Create Words</h4>
            </div>
            <div class="modal-body text-justify background3 container">
                <!-- Content is here -->
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group container center-block text-center">
                    <div class="col-lg-4 text-center">
                        <h4>Input new words</h4>
                    </div>
                    <div class="col-lg-8">
                        <textarea id="WContext" name="WContext" class="form-control text-box" rows="3" style="margin-left: auto; margin-right: auto;"></textarea>
                        @Html.ValidationMessageFor(model => model.WContext, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group container center-block text-center">
                    <div class="col-lg-4 text-center"><h4>Level</h4></div>
                    <div class="col-lg-8">
                        <select name="level" id="level" class="form-control text-box single-line" style="margin-left: auto; margin-right: auto;">
                            <option value="1">200 common words</option>
                            <option value="2">500 common words</option>
                            <option value="3">1000 common words</option>
                        </select>
                    </div>
                </div>
                <div class="container">

                    <hr style="height:1px; background-color:black" />
                    <label><span class="glyphicon glyphicon-info-sign"> </span></label><small> You can add more than 1 word at the same time. Every word has to be seperated by <strong>"space , . ? ! - _ &"</strong>. The level is applied for all words.</small>
                    
                </div>
                <!--End of content-->
            </div>
            <div class="modal-footer">
                <button type="button" value="" class="btn btn-primary" onclick="submitAddWord()">Create</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
}
