@model TA_Typing1.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id="register-modal-form" }))
{
    <div class="modal-dialog">
        <div class="modal-content" style="margin-left:auto; margin-right:auto; width:350px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-center" id="myModalLabel">Sign Up</h4>
            </div>
            <div id="bodyEditModal">
                <div class="modal-body form-horizontal well" style="margin-bottom:0px;">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-1">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control text-center", placeholder = "User Name", autocomplete = "off", style = "width:100%; max-width:100%; padding-left:8%; padding-right:8%" })
                            </div>
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-1">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                @Html.TextBoxFor(m => m.HomeTown, new { @class = "form-control text-center", placeholder = "Home Town", autocomplete = "off", style = "width:100%; max-width:100%; padding-left:8%; padding-right:8%" })
                            </div>
                            @Html.ValidationMessageFor(m => m.HomeTown, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-1">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control text-center", placeholder = "Password", autocomplete = "off", style = "width:100%; max-width:100% ; padding-left:8%; padding-right:8%" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-1">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center", placeholder = "Confirm Password", autocomplete = "off", style = "width:100%; max-width:100% ; padding-left:8%; padding-right:8%" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-1">
                            <button type="button" class="btn btn-default refresh-btn" style="width:100%; max-width:100% ; padding-left:8%; padding-right:8%" onclick="submitRegister()">Sign Up</button>
                        </div>
                    </div>

                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}


