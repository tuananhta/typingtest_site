<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="~/Images/Logo/logo6.PNG" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Type your words</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/Flip.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap_datetimepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
</head>
<body>
    <div class="container">
        <!-- HEADER -->
        <div id="header_layout" class="navbar navbar-default navbar-fixed-top" style="background-color:#656565; padding-left: 20px; padding-right: 20px;">
            <div class="container">
                <div class="col-md-2 hidden-xs center-block text-center">
                    <a href="@Url.Action("index", "home")" style="color:#ffffff; font-size:30px;"><span class="glyphicon glyphicon-education" style="top: 5px;"></span></a>
                </div>
                <div>
                    <div class="navbar-header">
                        <div class="row" style="display: -webkit-box;">
                            <a href="@Url.Action("index", "home")" class="visible-xs-block" style="color:#ffffff; position:fixed; right:5%; top:5px;"><img src="~/Images/Logo/logo6_xs.png" style="height:60px;" /></a>

                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="position: relative; right: 0;">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="text-center"><span class="navbar-text">@Html.ActionLink("Home", "index", routeValues: new { controller = "home", skp_ad = "on" }) </span></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="text-center"><span class="navbar-text"> @Html.ActionLink("Words", "index", "words")</span></li>
                                <li class="text-center"><span class="navbar-text"> @Html.ActionLink("Flash Cards", "index", "flashcards")</span></li>
                            }
                        </ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="nav navbar-nav navbar-right hidden-lg hidden-md hidden-sm" style="margin:auto;">
                                <li class="text-center">
                                    <form method="get" action="@Url.Action("find", "words")">
                                        <span class="btn-group btn-group-sm navbar-text" style="margin-top:10px; margin-right:30px;">
                                            <input name="s_word" autocomplete="off" class="btn btn-sm" placeholder="Find words" style="width:200px; height:95%; cursor:text;" type="text" maxlength="50">
                                            <button type="submit" class="btn btn-default btn-sm" onclick="$('#searchWord').submit()"><span style="font-size:14px; margin:1.5px; margin-left:10px; margin-right:10px;" class="glyphicon glyphicon-search"></span></button>
                                        </span>
                                    </form>
                                </li>
                            </ul>
                        }
                        @Html.Partial("_LoginPartial")
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="nav navbar-nav navbar-right hidden-xs" style="margin:auto;">
                                <li class="text-center">
                                    <form method="get" action="@Url.Action("find", "words")">
                                        <span class="btn-group btn-group-xs navbar-text" style="margin-top:8px; margin-right:30px;">
                                            <input name="s_word" autocomplete="off" class="btn btn-xs" placeholder="Find words" style="width:200px; height:95%; cursor:text;" type="text" maxlength="50">
                                            <button type="submit" class="btn btn-default btn-xs" onclick="$('#searchWord').submit()"><span style="font-size:14px; margin:1.5px; margin-left:10px; margin-right:10px;" class="glyphicon glyphicon-search"></span></button>
                                        </span>
                                    </form>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="container hidden-md hidden-lg" style="margin:20px;"></div>
        <div class="container">

            @RenderBody()
            <hr />
            <!-- FOOTER -->
            <footer class="text-center">

                <div class="col-md-6 col-md-push-6 text-center">
                    <div class="container">
                        <div class="col-md-7">
                            <span class="text-center" style="margin-right:15px;"><a style="color:#808080; font-size:14px;" href="@Url.Action("about","home")">About us</a></span>
                            <span class="text-center" style="margin-right:15px;"><a style="color:#808080; font-size:14px;" href="@Url.Action("feedback", "home") ">How this works?</a></span>
                            <span class="text-center" style="margin-right:15px;"><a style="color:#808080; font-size:14px;" href="@Url.Action("contact", "home") ">Contact</a></span>
                            <span class="text-center" style="margin-right:25px;"><a style="color:#808080; font-size:14px;" href="@Url.Action("feedback", "home") ">Feedback</a></span>

                        </div>
                        <div class="col-md-5">
                            <span><a href=""><img src="~/Images/Socials/facebook500.png" class="icon_social" /></a></span>
                            <span><a href=""><img src="~/Images/Socials/instagram.png" class="icon_social" /></a></span>
                            <span><a href=""><img src="~/Images/Socials/skype.png" class="icon_social" /></a></span>
                            <span><a href=""><img src="~/Images/Socials/email.png" class="icon_social" /></a></span>
                            <span><a href=""><img src="~/Images/Socials/linkedin.png" class="icon_social" /></a></span>
                            <span><a href=""><img src="~/Images/Socials/github.png" class="icon_social" /></a></span>
                        </div>

                    </div>
                </div>
                <div class="col-md-4 col-md-pull-5 text-center container">
                    <hr class="visible-sm visible-xs" style="margin-top:15px;" />
                    <div class="container">
                        <span style="color:#808080; font-size:14px;">&copy; @DateTime.Now.Year - Type Your Words</span>
                        <span class="text-muted" style="font-size:13px; margin-left:20px">Centria team, Kokkola, Finland </span><br />
                        <span> <img src="~/Images/Socials/vietnam.png" style="height:20px; margin-top:15px;" /></span>
                        <span> <img src="~/Images/Socials/finland.png" style="height:20px; margin-left:10px; margin-top:15px;" /></span>
                        <span> <img src="~/Images/Socials/poland.png" style="height:20px; margin-left:10px; margin-top:15px;" /></span>
                    </div>

                </div>
            </footer>
        </div>

        @if (!User.Identity.IsAuthenticated)
        {
        <!--    POPUP MODAL LOGIN   -->
            <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

                <!-- Content is here -->
                @{
            Html.RenderAction("loginModal", "account");
                }
            </div>

        <!--    POPUP MODAL REGISTER   -->
            <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                @{
            Html.RenderAction("register", "account");
                }
            </div>
        }


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/moment.js"></script>
        <!-- bootcard -->
        <script src="http://cdnjs.cloudflare.com/ajax/libs/bootcards/1.0.0/js/bootcards.min.js"></script>
        <!-- bootstrap date time picker -->
        <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
        <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
        <script src="~/Scripts/_dateTimePicker.js"></script>

        <!-- flip flash cards -->
        <script src="http://nnattawat.github.io/flip/asset/js/prettify.js"></script>
        <script src="http://nnattawat.github.io/flip/asset/js/jquery.flip.js"></script>
        <script src="~/Scripts/_flashCards.js"></script>

        <!-- home page -->
        @RenderSection("script", required: false)
        @RenderSection("script2", required: false)
        @RenderSection("flash_adv", required: false)

        <!-- index, words -->
        @RenderSection("addWordScript", required: false)

        <!-- login page -->
        @RenderSection("loginPageScript", required: false)

        <!-- flashcard index page -->
        @RenderSection("flashcardScript", required: false)
        <script src="~/Scripts/_modals.js" type="text/javascript"></script>
        <!-- LOGIN; SIGN UP JS -->
        <script>
            $("#LoginFormModal").submit(function (event) {
                event.preventDefault();
                $.ajax({
                    url: '@Url.Action("login","account")',
                    type: "POST",
                    data: $('#LoginFormModal').serialize(),
                    success: function (data) {
                        if (data.success == true) {
                            window.location = data.url;
                        }
                        $("#loginModal").empty().append(data);
                    },
                });
            });

            $("#register-modal-form").submit(function (event) {
                event.preventDefault();
                $.ajax({
                    url: "@Url.Action("register","account")",
                    type: "POST",
                    data: $('#register-modal-form').serialize(),
                    success: function (data) {
                        if (data.success == true) {
                            window.location = data.url;
                        }
                        $("#registerModal").empty().append(data);
                    },
                });
            });


            // delete form modal
            $("#delete_def_form").submit();
        </script>
        @RenderSection("datetime_jquery", required: false)

    </div>
</body>
</html>
