            <form style="display:none;" id="grid-container-form" class="form-color-option" method="post" action="@Url.Action("edit", "flashcards")">
                @Html.AntiForgeryToken()
                @{
                    int modelCount = 0;
                    foreach (var item in Model)
                    {
                        <section id="grid-@modelCount" class="card-grid" style="display:none; width: 320px; height: 180px;margin: 15px;">
                            <div id="front-@item.id" class="front @item.fColor-front" style="overflow:auto;">
