                                        @if (item.fFavourite == false)
                                        {
                                            <span class="false_favourite" style="position:static;" onclick="addFavourite(event,@item.id)"><span style="position:static;"><img style="height:40px;" src="~/Images/Icon/add_fav.png" /></span></span>
                                            <span class="true_favourite" style="position:static; display:none" onclick="removeFavourite(event, @item.id)"><span style="position:static;"><img style="height:40px;" src="~/Images/Icon/rem_fav.png" /></span></span>
                                        }
                                        else
                                        {
                                            <span class="false_favourite" style="position:static; display:none;" onclick="addFavourite(event,@item.id)"><span style="position:static;"><img style="height:40px;" src="~/Images/Icon/add_fav.png" /></span></span>
                                            <span class="true_favourite" style="position:static; " onclick="removeFavourite(event, @item.id)"><span style="position:static;"><img style="height:40px;" src="~/Images/Icon/rem_fav.png" /></span></span>
                                        }
                                    </span>
                                </div>
                                <h2 class="text-primary" style="margin-top:7px;">@item.word.WordDetail.WContext</h2>
                                @{
                                        string wordTypes = null;

                                        foreach (var wType in item.word.WordDefs.GroupBy(m => m.wType))
                                        {
                                            wordTypes += wType.First(m => m.wType != null).wType + " ,";
                                        }


                                        if (wordTypes != null)
                                        {
                                            wordTypes = wordTypes.Remove(wordTypes.Length - 1);
                                            wordTypes = '(' + wordTypes + ')';
                                        }
                                }
                                <h4 class="text-danger"><i>@wordTypes</i></h4>

                                @if (item.word.WordDetail.WPronounce != null)
                                {
                                    <h3 style="margin:0">/@item.word.WordDetail.WPronounce/</h3>
                                }

                            </div>
                            <div id="back-@item.id" class="back @item.fColor-back" style="overflow:scroll; overflow-x:hidden; overflow-y:auto;">
                                <div class="left container">
                                    @{
                                int count = 0;
                                foreach (var def in item.word.WordDefs)
                                {
                                    count++;
                                    <table class="small text-center" style="width:100%">
                                        <tr>
                                            <td style="width:20%; min-width:10px;">
                                                <span>@count. (@def.wType)</span>
                                            </td>
                                            <td>
                                                <span class="text-danger"><b>@def.wDefinition</b></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td>
                                                <span><i class="text-primary">Eg: @def.wExample</i></span>
                                            </td>
                                        </tr>
                                    </table>


                                }
                                    }
                                </div>
                            </div>
                        </section>
                                modelCount++;
                    }
                }
            </form>
            @if (modelCount < 1)
            {
                <h3 class="alert alert-danger">Unfortunately, no words matched your request</h3>
            }
        </div>
    </div>
</div>
